---
const features = [
  {
    icon: '\u2502',
    title: 'Unix Pipes',
    description: 'TSV output by default. Pipe through grep, awk, jq, or any Unix tool.',
    color: 'text-gpu-accent',
    glow: 'rgb(var(--accent) / 0.15)',
    example: 'rdc draws | grep Triangle | cut -f1',
  },
  {
    icon: '{}',
    title: 'JSON Mode',
    description: 'Every command supports --json. Perfect for CI assertions and AI agents.',
    color: 'text-gpu-purple',
    glow: 'rgba(179,136,255,0.15)',
    example: 'rdc pipeline 42 --json | jq .shader',
  },
  {
    icon: '/',
    title: 'VFS Paths',
    description: 'Browse captures like a filesystem. Tab-complete through draws and state.',
    color: 'text-gpu-green',
    glow: 'rgba(0,230,118,0.15)',
    example: 'rdc cat /draws/142/shader/ps',
  },
  {
    icon: '\u25C8',
    title: 'Daemon Session',
    description: 'Load once, query many. Long-lived daemon holds the capture open.',
    color: 'text-gpu-orange',
    glow: 'rgba(255,145,0,0.15)',
    example: 'rdc open cap.rdc && rdc draws && rdc close',
  },
  {
    icon: '\u2713',
    title: 'CI Assertions',
    description: 'Built-in pixel, image, state, and count assertions. Exit code 0/1/2 for pass/fail/error.',
    color: 'text-emerald-400',
    glow: 'rgba(52,211,153,0.15)',
    example: 'rdc assert-pixel 142 400 300 --expect "1 0 0 1"',
  },
  {
    icon: '\u26A1',
    title: 'AI Agent Ready',
    description: 'Claude Code skill auto-installs. VFS paths + JSON output make captures agent-navigable.',
    color: 'text-gpu-purple',
    glow: 'rgba(179,136,255,0.15)',
    example: 'rdc install-skill && rdc ls /draws/142/',
  },
];
---

<section id="features" class="py-32 relative section-glow">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl md:text-5xl font-extrabold text-center mb-4 tracking-tight">
      <span class="gradient-text">Built for Automation</span>
    </h2>
    <p class="text-center text-gray-400 mb-20 max-w-lg mx-auto">
      Every design decision optimized for pipelines, scripting, and agent-driven workflows.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5" id="features-grid">
      {features.map((f, i) => (
        <div
          class="feature-card glass-card p-7 opacity-0"
          data-feature-index={i}
        >
          <div class="flex items-start gap-5">
            <div
              class={`font-mono font-bold text-3xl ${f.color} shrink-0 w-12 h-12 flex items-center justify-center rounded-lg`}
              style={`background: ${f.glow}; text-shadow: 0 0 20px currentColor;`}
            >
              {f.icon}
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="text-lg font-bold text-gray-100 mb-2">{f.title}</h3>
              <p class="text-sm text-gray-400 mb-4 leading-relaxed">{f.description}</p>
              <div class="flex items-center gap-2 bg-gpu-deeper/80 rounded-lg px-4 py-2.5 overflow-x-auto">
                <span class="text-gpu-green text-xs select-none font-bold shrink-0">$</span>
                <code class="text-xs font-mono text-gray-300 whitespace-nowrap">{f.example}</code>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  gsap.utils.toArray<HTMLElement>('.feature-card').forEach((card, i) => {
    gsap.fromTo(
      card,
      { opacity: 0, y: 50, scale: 0.96 },
      {
        opacity: 1,
        y: 0,
        scale: 1,
        duration: 0.8,
        delay: i * 0.12,
        ease: 'power3.out',
        scrollTrigger: {
          trigger: card,
          start: 'top 88%',
          toggleActions: 'play none none none',
        },
      },
    );
  });
</script>
