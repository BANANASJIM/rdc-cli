---
import ThemeSwitcher from './ThemeSwitcher.astro';

const base = import.meta.env.BASE_URL;
const navLinks = [
  { label: 'Docs', href: `${base}docs/` },
  { label: 'Commands', href: `${base}docs/commands/` },
  { label: 'Examples', href: `${base}docs/examples/` },
  { label: 'Install', href: `${base}docs/install/` },
];
---

<nav class="fixed top-0 w-full z-50 bg-gpu-dark/80 backdrop-blur-xl border-b border-gpu-border/50">
  <div class="max-w-6xl mx-auto px-6 h-16 flex items-center justify-between">
    <a href={base} class="flex items-center gap-3 group">
      <span class="font-mono font-bold text-lg text-gpu-accent group-hover:text-gpu-accent-dim transition-colors">
        rdc<span class="text-gray-500">-cli</span>
      </span>
    </a>

    <!-- Desktop nav -->
    <div class="hidden md:flex items-center gap-8">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class="text-sm text-gray-400 hover:text-gpu-accent transition-colors"
        >
          {link.label}
        </a>
      ))}
      <ThemeSwitcher />
      <a
        href="https://github.com/BANANASJIM/rdc-cli"
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-400 hover:text-gpu-accent transition-colors"
        aria-label="GitHub"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0 0 24 12c0-6.63-5.37-12-12-12z"/>
        </svg>
      </a>
    </div>

    <!-- Mobile: theme toggle + hamburger -->
    <div class="flex md:hidden items-center gap-3">
      <ThemeSwitcher />
      <button id="mobile-menu-btn" class="text-gray-400 hover:text-gpu-accent transition-colors cursor-pointer" aria-label="Menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-gpu-dark/95 backdrop-blur-xl border-b border-gpu-border/50 px-6 py-4 space-y-2">
    {navLinks.map((link) => (
      <a href={link.href} class="block text-sm text-gray-400 hover:text-gpu-accent py-2 transition-colors">{link.label}</a>
    ))}
    <a href="https://github.com/BANANASJIM/rdc-cli" target="_blank" rel="noopener noreferrer" class="block text-sm text-gray-400 hover:text-gpu-accent py-2 transition-colors">GitHub</a>
  </div>
</nav>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => menu?.classList.toggle('hidden'));
</script>
